<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-liquid-blur"
        version="1.0.0">

    <name>Cordova Liquid Blur Plugin</name>
    <description>Native iOS 26 Liquid Glass blur effects for Cordova applications</description>
    <license>MIT</license>
    <keywords>cordova,ios,blur,liquid glass,ios26</keywords>
    <repo>https://github.com/carpschool/cordova-plugin-liquid-blur.git</repo>
    <issue>https://github.com/carpschool/cordova-plugin-liquid-blur/issues</issue>

    <js-module src="www/LiquidBlur.js" name="LiquidBlur">
        <clobbers target="cordova.plugins.liquidBlur" />
    </js-module>

    <!-- iOS -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="LiquidBlur">
                <param name="ios-package" value="LiquidBlur" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
            <string>This app uses native blur effects for enhanced UI presentation</string>
        </config-file>

        <header-file src="src/ios/LiquidBlur.h" />
        <source-file src="src/ios/LiquidBlur.m" />
        <source-file src="src/ios/LiquidBlurHelper.swift" />

        <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>

        <framework src="UIKit.framework" />
        <framework src="Foundation.framework" />
        <framework src="CoreGraphics.framework" />
    </platform>

    <!-- Android (fallback) -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="LiquidBlur">
                <param name="android-package" value="school.carp.plugins.LiquidBlur" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <source-file src="src/android/LiquidBlur.java" target-dir="src/school/carp/plugins" />
    </platform>

</plugin>
